{
  "name": "hotfile",
  "version": "0.3.5",
  "description": "Hotfile makes working with folders and files in node-js easy and clear.",
  "main": "lib/index.js",
  "types": "lib",
  "scripts": {
    "build": "tsc --build --clean && tsc",
    "start": "NODE_ENV=production node dist/app.js",
    "dev": "NODE_ENV=development nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "format": "prettier --write .",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint --ext ts --ext tsx --ext js",
    "check-all": "npm run check-format &&npm run check-lint &&npm run check-types &&npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chen7david/hotfile.git"
  },
  "keywords": [
    "folder",
    "files",
    "dirtree",
    "readdir"
  ],
  "author": "David M.Chen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chen7david/hotfile/issues"
  },
  "homepage": "https://github.com/chen7david/hotfile#readme",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "eslint": "^8.26.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
